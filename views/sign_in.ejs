<link rel="stylesheet" href="/css/form.css">

<div id="sign-in-container" class="container">

  <div class="heading"><h2>Sign In</h2></div>

  <div id="sign-in-form" class="form">
    <form action="/users/create-session" method="post">
      <div>
        <label for="email">Email</label>
      <input type="email" name="email" required />
      </div>
      
      <div>
        <label for="password">Password</label>
        <input type="password" name="password" required />
      </div>

      <a href="/users/sign-up">Don't have an account? Click here to Sign Up</a>
      
  
      <input type="submit" value="Login" class="btn">
    </form>
  </div>

  <div class="google-link">
    <a href="/users/auth/google">Sign In with Google!</a>   
</div>

</div>



